{
    "name": "blogora-api",
    "version": "1.0.0",
    "description": "Blog Platform API - A modern blog platform with user management, content management, and interactive features",
    "author": "Amjath",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prepare": "husky",
        "prebuild": "rimraf dist",
        "clean": "rimraf dist && rimraf node_modules.cache && yarn cache clean",
        "build": "nest build",
        "format": "prettier --write '{src,test}/**/*.{ts,json,yml,yaml}' && prettier --write '*.{ts,json,yml,yaml,mjs}'",
        "start": "nest start",
        "start:local": "yarn env:copy:local && clear && nest start --watch",
        "start:prod": "node dist/main",
        "start:qa": "yarn env:copy:qa && nest start --watch",
        "env:copy:local": "cp .env.local .env",
        "env:copy:production": "cp .env.production .env",
        "env:copy:qa": "cp .env.qa .env",
        "lint": "eslint",
        "lint:staged": "lint-staged",
        "lint:fix": "eslint --fix",
        "test": "TZ=UTC jest --config test/jest.json --passWithNoTests --forceExit",
        "swagger": "start http://localhost:8000/api/docs",
        "deadcode": "ts-prune --project tsconfig.json --unusedInModule --skip *.json",
        "spell": "cspell lint --config cspell.json '{src,test}/**/*.ts' --color --gitignore --no-must-find-files --no-summary --no-progress || true",
        "package:upgrade": "npx npm-check-updates -u",
        "package:check": "npx npm-check-updates -i",
        "migrate:fresh": "yarn migrate:remove && yarn migrate:seed",
        "migrate:seed": "nestjs-command seed:user",
        "migrate:remove": "nestjs-command remove:user"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.883.0",
        "@aws-sdk/s3-request-presigner": "^3.883.0",
        "@nestjs/axios": "^4.0.0",
        "@nestjs/cache-manager": "^3.0.1",
        "@nestjs/common": "^11.1.3",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.3",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.3",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/throttler": "^6.4.0",
        "bcryptjs": "^3.0.2",
        "bytes": "^3.1.2",
        "cache-manager": "^7.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "compression": "^1.8.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "helmet": "^8.1.0",
        "keyv": "^5",
        "mongoose": "^8.16.1",
        "ms": "^2.1.3",
        "nestjs-command": "^3.1.5",
        "nestjs-pino": "^4.4.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pino-http": "^10.5.0",
        "pino-pretty": "^13.0.0",
        "reflect-metadata": "^0.2.2",
        "response-time": "^2.3.3",
        "rxjs": "^7.8.2",
        "uuid": "^12.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.29.0",
        "@golevelup/ts-jest": "^0.7.0",
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.3",
        "@swc/cli": "^0.7.7",
        "@swc/core": "^1.12.7",
        "@swc/jest": "^0.2.38",
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/multer": "^1.4.13",
        "@types/node": "^24.0.4",
        "@types/passport-jwt": "^4.0.1",
        "@types/response-time": "^2.3.9",
        "@types/supertest": "^6.0.3",
        "cspell": "^9.1.2",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "husky": "^9.1.7",
        "jest": "^30.0.3",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.1",
        "rimraf": "^6.0.1",
        "rxjs-marbles": "^7.0.1",
        "stop-only": "^3.4.3",
        "supertest": "^7.1.1",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "ts-prune": "^0.10.3",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.35.0"
    },
    "lint-staged": {
        "**/*.ts": [
            "eslint",
            "stop-only --file"
        ],
        "*.{json,yaml}": [
            "prettier --write"
        ]
    },
    "packageManager": "yarn@1.22.22",
    "engines": {
        "npm": "please-use-yarn",
        "yarn": ">= 1.22.22",
        "node": ">= 20.11.0"
    }
}
