{
    "$schema": "https://swc.rs/schema.json",
    "sourceMaps": true,
    "module": {
        "type": "commonjs"
    },
    "jsc": {
        "baseUrl": "./",
        "paths": {
            "@app/*": ["src/app/*"],
            "@common/*": ["src/common/*"],
            "@configs/*": ["src/configs/*"],
            "@config": ["src/configs/index.ts"],
            "@modules/*": ["src/modules/*"],
            "@routes/*": ["src/router/routes/*"],
            "@router": ["src/router/router.module.ts"],
            "@workers/*": ["src/worker/*"],
            "@migration/*": ["src/migration/*"],
            "@test/*": ["test/*"]
        },
        "target": "esnext",
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        }
    },
    "minify": false,
    "exclude": [
        "node_modules",
        "dist",
        "coverage",
        "templates",
        "src/metadata.ts",
        "logs"
    ]
}
